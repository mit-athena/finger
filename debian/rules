#!/usr/bin/make -f

DEB_AUTO_UPDATE_DEBIAN_CONTROL = 1
DEB_AUTO_UPDATE_AUTOCONF = 1
DEBATHENA_DIVERT_PACKAGES += \
	debathena-finger
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/autotools.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk
include /usr/share/cdbs/1/rules/debathena-divert.mk

DEB_CONFIGURE_EXTRA_FLAGS += --with-krb4=$(shell krb5-config --prefix krb4) --with-hesiod --with-zephyr

common-install-impl::
	mv $(DEB_DESTDIR)/usr/bin/finger $(DEB_DESTDIR)/usr/bin/finger.debathena

clean::
	rm -f configure
